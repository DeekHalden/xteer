.aside-filters
    width calc(1180px / 6)
    padding-bottom 20px
    .collapse-btn
        display none
    .group 
        margin-top 20px
        
        &__title
            display block
            font-family 'helveticaneuecyr-bold'
            font-size .8em
            text-decoration none
            color #636363
        &.price
            .price-slider
                margin-top 20px
        label
            display block
            margin 5px 0
            color #636363
            font-size .8em
            cursor pointer
            transition .2s linear all
            &:hover
                opacity .8
                
@media(max-width 1199px)
    .aside-filters
        width 100%
        .collapse-btn
            @extend .button
            display block
            width 100%
            height 50px
            margin-top 40px
            border-radius 25px
            padding 0 
            border none
            border-color transparent
            font-size 1.2em
            font-family helveticaneuecyr-bold
            text-transform uppercase
            background linear-gradient(#6e4c86,#290d55)
            transition .2s ease all
            cursor pointer
        .group
            
            &__title
                position relative
                &:after
                    font-family helveticaneuecyr-bold
                    content '+'
                    position absolute
                    right 0
                    width 8px
                    height 15px
                    border 1px solid $dark-purple
                    color $dark-purple
                    padding 3px 6px
                &--active
                    position  relative
                    &:after
                        content '-'
                        position absolute
                        right 0
