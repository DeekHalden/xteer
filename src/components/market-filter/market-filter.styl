.aside-filters
    width calc(1180px / 6)
    padding-bottom 20px
    &--item-page-hidden
        display none
    .collapse-btn
        display none
    .group 
        padding 20px 10px
        
        &__title
            display block
            font-family 'helveticaneuecyr-bold'
            font-size .8em
            text-decoration none
            color #636363
        &.price
            .price-slider
                margin-top 20px
        label
            display block
            margin 5px 0
            color #636363
            font-size .8em
            cursor pointer
            transition .2s linear all
            &:hover
                opacity .8
                
@media(max-width 1199px)
    .aside-filters
        width 100%
        padding-bottom 0
        &--item-page-hidden
            display block
        .collapse-btn
            @extend .button
            display block
            width 100%
            height 50px
            margin-top 40px
            margin-bottom 5px
            border-radius 25px
            padding 0 
            border none
            border-color transparent
            font-size 1.2em
            font-family helveticaneuecyr-bold
            text-transform uppercase
            background linear-gradient(#6e4c86,#290d55)
            transition .2s ease all
            cursor pointer
            &:hover 
                background #90268e
        .group
            background-color #f0f0f0
            border 1px solid #dddddd
            
            &__title
                position relative
                margin-left 10px
                &:after
                    font-family helveticaneuecyr-bold
                    content '+'
                    position absolute
                    right 8px
                    top -4px
                    width 8px
                    height 15px
                    border 1px solid $dark-purple
                    color $dark-purple
                    padding 3px 6px
                &--active
                    position  relative
                    &:after
                        content '-'
                        position absolute
            form 
                margin-top 20px
                input
                    background-color transparent
                        
