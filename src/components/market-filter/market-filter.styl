.aside-filters
    width calc(1180px / 6)
    padding-bottom 20px
    &--item-page-hidden
        display none
    .collapse-btn
        display none
    .group 
        padding 20px 10px
        
        &__title
            display block
            font-family 'helveticaneuecyr-bold'
            font-size .8em
            text-decoration none
            color #636363
            margin-bottom 20px
        &.price
            .price-slider
                margin-top 40px
        label
            
            display block
            color #636363
            font-size .8em
            cursor pointer
            transition .2s linear all
            margin-bottom 13px
            input
            &:hover
                opacity .8
                
@media(max-width 1199px)
    .aside-filters
        width 100%
        padding-bottom 0
        &--item-page-hidden
            display block
        .collapse-btn
            @extend .button
            display block
            width 100%
            height 86px
            margin-top 40px
            margin-bottom 5px
            border-radius 43px
            padding 0 
            padding-left 13%
            border none
            border-color transparent
            font-size 1.2em
            font-family helveticaneuecyr-bold
            text-transform uppercase
            background #330154 url('../images/filt.png') no-repeat calc(50% - 90px) center
            transition .2s ease all
            cursor pointer
            &:hover 
                background #90268e url('../images/filt.png') no-repeat calc(50% - 120px) center
        .group
            background-color #f0f0f0
            border 1px solid #dddddd
            
            &__title
                position relative
                margin-left 10px
                margin-bottom 20px
                &:after
                    font-family helveticaneuecyr-bold
                    content '+'
                    position absolute
                    right 8px
                    top -4px
                    width 8px
                    height 15px
                    border 1px solid $dark-purple
                    color $dark-purple
                    padding 3px 6px
                &--active
                    position  relative
                    &:after
                        content '-'
                        position absolute
            form 
                margin-top 20px
                input
                    background-color transparent
                        
