.checkout-form
    @extends .main
    margin-bottom 40px
    .heading 
        @extends .main .posts__heading
    .form
        display flex
        .form-section
            width 32%
            float left
            &:not(:first-child)
                margin-left 1%
            .heading
                height 38px
                padding-left 11px
                margin-bottom 13px
                font-size 18px
                line-height 38px
                color #fff
                text-transform initial
                background-color $dark-purple
                
                .order
                    margin-right 10px
                    margin-left 5px
                    position relative
                    z-index 5
                    background-color transparent
                    &::before
                        content ''
                        width 25px
                        height 25px
                        right -4px
                        top -4px
                        border 1px solid transparent
                        border-radius 100%
                        z-index -1
                        background-color $purple
                        position absolute
            .form-control
                width 100%
                height 36px
                padding-left 5px
                margin-top 10px
                border 1px solid #e1e1e1
                border-radius 7px
            textarea.form-control 
                height 92px
                resize none
            .radio-group
                margin-top 10px
                display flex
                
                .form-control
                    float left
                    margin-right 10px
                label 
                    float left
                    cursor pointer
                    margin-right 40px
                    margin-left 10px
