.checkout-form
    @extends .main
    margin-bottom 40px
    .heading 
        @extends .main .posts__heading
        padding-bottom 17px
    .subheading
        color $purple
        margin-bottom 41px
        font-size 13px
        font-family helveticaneuecyr-roman
        font-weight 500                
        
    .form
        display flex
        flex-wrap wrap
        position relative
        .form-section
            width 33%
            float left
            margin-bottom 20px
            &:not(:first-child)
                margin-left .5%
            &:nth-child(2) .heading::before
                content '2'
                
            &:last-child .heading::before
                content '3'
                
            .heading
                position relative
                height 38px
                padding-left 41px
                margin-bottom 13px
                font-size 18px
                line-height 38px
                color #fff
                text-transform initial
                background-color $dark-purple
                &::before
                    content "1"
                    position absolute
                    left 7px
                    top 5px
                    width 28px
                    height 28px
                    font-weight bold
                    color #fff
                    font-size 15px
                    text-align center
                    line-height 28px
                    background #90268e
                    border-radius 100%
            .form-control
                width 100%
                height 36px
                padding-left 5px
                
                margin-top 10px
                border 1px solid #e1e1e1
                border-radius 7px
                color #636363
                font-size 13px
                font-family Arial
                &:focus
                    outline none
            textarea.form-control 
                height 92px
                padding-top 5px
                resize none
            .radio-group
                margin-top 10px
                display flex
                flex-wrap wrap
                .radio-group1, .radio-group2
                    margin 10px
                    .form-control
                        float left
                    label 
                        // float left
                        cursor pointer
                        margin-right 40px
                        
                        font-size 13px
                        padding-top 2px
                        &:last-child
                            margin-right 0
                    &.delivery
                        label
                            margin-right 10px
            .button.checkout-btn
                display block
                width 200px
                float none
                margin 41px auto 0
                text-transform uppercase
    
@media(max-width 720px)
    .checkout-form
        .form
            .form-section
                width 100%
                margin 0 auto 20px !important
            .button.checkout-btn
                position initial
                display block
                width 50%
                margin 0 auto
        
                

