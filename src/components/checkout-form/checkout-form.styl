.checkout-form
    @extends .main
    margin-bottom 40px
    .heading 
        @extends .main .posts__heading
    .form
        display flex
        flex-wrap wrap
        position relative
        .form-section
            width 33%
            float left
            margin-bottom 20px
            &:not(:first-child)
                margin-left .5%
            .heading
                height 38px
                padding-left 11px
                margin-bottom 13px
                font-size 18px
                line-height 38px
                color #fff
                text-transform initial
                background-color $dark-purple
                
                .order
                    margin-right 10px
                    margin-left 5px
                    position relative
                    z-index 5
                    background-color transparent
                    &::before
                        content ''
                        width 25px
                        height 25px
                        right -4px
                        top -4px
                        border 1px solid transparent
                        border-radius 100%
                        z-index -1
                        background-color $purple
                        position absolute
            .form-control
                width 100%
                height 36px
                padding-left 5px
                
                margin-top 10px
                border 1px solid #e1e1e1
                border-radius 7px
                color #636363
                font-size 13px
                font-family Arial
                &:focus
                    outline none
            textarea.form-control 
                height 92px
                padding-top 5px
                resize none
            .radio-group
                margin-top 10px
                display flex
                flex-wrap wrap
                .radio-group1, .radio-group2
                    margin 10px
                    .form-control
                        float left
                    label 
                        // float left
                        cursor pointer
                        margin-right 40px
                        
                        font-size 13px
                        padding-top 2px
                        &:last-child
                            margin-right 0
                    &.delivery
                        label
                            margin-right 10px
        .button.checkout-btn
            position absolute
            bottom 25px
            right 0px
    
@media(max-width 720px)
    .checkout-form
        .form
            .form-section
                width 100%
                margin 0 auto 20px !important
            .button.checkout-btn
                position initial
                display block
                width 50%
                margin 0 auto
        
                

