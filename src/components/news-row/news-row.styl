
.pagination-container
    @extends .main
    .pagination
        width 87px
        margin 0 auto
        margin-bottom 40px
        &__element
            display inline-block
            margin 0 5px
            padding 2px 5px
            color #fff
            background $dark-purple
            text-decoration none
            box-shadow 2px 4px 8px 0px rgba(46,61,73,0.2)
            transition .5s ease all
            &--active
                background $purple
            &:hover
                color #d42e12
                cursor pointer
                box-shadow 12px 15px 20px 0px rgba(46,61,73,.2)
                