.checkout-wrapper
    @extends .main
    .heading
        @extends .main .posts__heading
    .items-list
        margin-bottom 40px
        .checkout-item-card
            width 100%
            border 1px solid #e1e1e1
            border-radius 7px
            margin 20px 0
            display flex
            
            align-items top
            transition .2s ease all
            &:hover
                box-shadow 12px 15px 20px 0px rgba(46,61,73,.2)        
            &__media, &__title, &__price, &__quantity, &__total, &__close
                display inline-block
                margin 0 auto
                float left
                text-align center
            &__title, &__price, &__quantity, &__total
                
                height 60px
                margin-top 55px
            &__close
                margin-top 75px
            &__media
                width auto
            &__title, &__price, &__total
                width 19%
                color #919191
            &__title
                text-align left 
                color $dark-purple
                font-family helveticaneuecyr-bold
                font-size 20px
                text-decoration none
            &__name
                text-decoration underline
            &__article
                margin-top 10px
                color  #6d6d6d
                font-size 11.79px
                font-weight 700
                text-transform lowercase
                text-decoration none
            &__price
                span
                    margin-top 10px
                    color $dark-purple
                    font-family helveticaneuecyr-light
                    font-size 20px
                    display block
            &__quantity
                width 75px
                color #919191
                position relative
                .controls
                    position absolute
                    width 20px
                    background linear-gradient(0deg, rgba(255, 255, 255, 0) 0%, rgba(63, 68, 72, 0.1) 100%)
                    height 30px
                    right 14px
                    top 28px
                    border-top-right-radius 3px
                    border-bottom-right-radius 3px
                    .up, .down
                        margin 0 auto
                        width 10px
                        height 10px
                        cursor pointer
                        border-left 5px solid transparent
                        border-right 5px solid transparent
                    .up
                        margin-top 4px
                        margin-bottom 2px
                        border-bottom 5px solid #575d62
                        &:hover 
                            border-bottom 5px solid #000
                    .down
                        border-top 5px solid #575d62
                        &:hover 
                            border-top 5px solid #000
                        
                        
                input 
                    height 30px
                    width 50px
                    margin-top 10px
                    background linear-gradient(0deg, rgba(63, 68, 72, 0.1) 0%, rgba(255, 255, 255, 0) 100%)
                    border-radius 4px
                    border 1px solid rgba(145,145,145, .3)
                    cursor pointer
                    -moz-appearance textfield
                    appearance textfield
                    &::-webkit-inner-spin-button 
                        -webkit-appearance none
                    &::-webkit-outer-spin-button
                        -webkit-appearance none
                    &:focus
                        outline none
            &__total
                span
                    @extends .checkout-wrapper .items-list .checkout-item-card__price span
                    margin-bottom 10px                    
                    font-family helveticaneuecyr-bold
                    
            &__close
                width 30px
                background  url('../images/checkout-close.png') no-repeat center center
                border 1px solid transparent
                border-radius 100%
                height 30px
                cursor pointer
                &:hover
                    background-color rgba(46,61,73,.1)  
        