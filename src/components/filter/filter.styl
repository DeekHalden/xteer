.filter
    margin-top 220px
    .filter-menu
        display flex
        justify-content space-between
        position relative
        flex-wrap wrap
        &:after
            position absolute
            content ''
            background url('../images/strike-through.png') no-repeat 
            background-size contain
            width 120%
            height 10px
            left -9%
            top 50%
            z-index -1
        .item
            height 130px
            width calc(1180px / 6.5)
            cursor pointer
            &:hover .media__image
                bottom 128px
            &:hover .item__text:after
                content ''
                bottom -20px
                width 0
                height 0
                display block
                opacity 1
                transform scale(1)
            .media
                height 129px
                position relative
                overflow hidden
                &__image
                    margin 0 auto
                    display block
                    bottom 0
                    position relative
            &__text
                display block
                color $purple
                text-align center
                font-size 1em
                height 3em
                line-height 1em
                position relative
                &:after
                    transform scale(0)
                    opacity 0
                    left calc(50% - 10px)
                    position absolute
                    content ''
                    bottom -30px
                    transition .2s ease all
                    border-top 10px solid transparent
                    border-right 10px solid transparent
                    border-left 10px solid transparent
                    border-bottom 10px solid #330154
                    border-left 10px solid transparent
    .filter-dropdown
        margin-top 67px
        position relative
        .dropdown
            display flex
            justify-content flex-start
            flex-wrap wrap
            background $dark-purple /*url('../images/close.png') no-repeat right center*/
            
            padding 15px
            
            .item
               
                font-family 'helveticaneuecyr-bold'
                color #fff
                font-size .9em
                text-transform uppercase
                margin-right 30px            
                cursor pointer
                position relative
                display block
                &:hover
                    color $purple
                .links-wrapper
                    width 200px
                    left -15px
                    position absolute
                    display none
                    background-color $dark-purple
                    z-index 1
                    &--block
                        display block
                    &__link
                        padding 10px
                        margin-top 10px
                        cursor pointer
                        display block
                        text-decoration none
                        color #fff
                        &:hover
                            color $purple
        .close-btn
            position absolute
            right 0
            top 0 
            width 51px
            height 46px
            background url('../images/close.png') no-repeat 
            background-size cover
            cursor pointer
					
			
				

@media(max-width 1199px)
    .filter
        margin-top 0
        .filter-menu
            &:after
                background transparent
            .item
                margin 40px auto
                



@media(max-width 680px)
    .filter
        .filter-dropdown
            .dropdown
                display block
                .item
                    margin 20px 0
