-var dropdown_item = {src:'item.html', text: 'Lorem ipsum X550-zx'}
-var i = 0
-var count = 0

.row.filter
    .filter-menu
        while i < 6
            +b.item
                +b.media
                    +e.IMG(src=item).image
                +e.SPAN.text МАСЛА ТРАНСМИССИОННЫЕ
            -i++
    .filter-dropdown
        +b.UL.dropdown
            +b.LI.item несинтетические
                +b.UL.links-wrapper
                    +e.LI
                        +e.A(href=dropdown_item.src).link #{dropdown_item.text}
