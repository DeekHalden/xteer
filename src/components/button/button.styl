.button
	display block
	width 100px
	padding 9px 48px 9px 15px
	border-radius 7px
	background #3c1252 url('../images/right_arrow.png') no-repeat 90% center
	font-family 'helveticaneuecyr-roman'
	font-size 13px
	outline none
	color #fff
	text-decoration none
	transition .2s linear all
	
.button:hover
	color #000
	background #90268e url('../images/right_arrow.png') no-repeat 95% center
