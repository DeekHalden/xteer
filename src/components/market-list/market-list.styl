.items
    margin-top 15px
    width calc(1180px / 6 * 5 - 20px)
    margin-left 20px
    display flex
    flex-wrap wrap
    justify-content space-between
    
    .item-card
        display block
        width calc(100% / 5 - 20px)
        margin 10px auto
        text-decoration none
        &:nth-child(5n + 5)
            margin-right 0
        .select
            cursor pointer
            display block
            margin 10px auto 0
            option:hover 
                cursor pointer
        .button
            margin 10px auto
            border 0
            cursor pointer
@media(max-width 1199px)
    .items
        width 100%
        margin-left 0
        .item-card
            width calc(100% / 3 - 20px)
            &:nth-child(5n + 5)
                margin-right auto
            &:nth-child(3n + 1)
                margin-left 0
            &:nth-child(3n + 3)
                margin-right 0
@media(max-width 479px)
    .items
        .item-card
            width calc(100% / 2 - 20px)
            &__price
                margin-left 10px
            .price-old
                margin-right 10px
            &:nth-child(5n + 5)
                margin-right auto
            &:nth-child(3n + 1)
                margin-left auto
            &:nth-child(3n + 3)
                margin-right auto
            &:nth-child(2n + 1)
                margin-left 0
            &:nth-child(2n + 2)
                margin-right 0