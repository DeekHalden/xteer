.pagination-container
    .pagination
        width 87px
        margin 0  auto  40px 1px
        &__element
            display inline-block
            
            padding 2px 5px
            color #fff
            background $dark-purple
            text-decoration none
            box-shadow 2px 4px 8px 0px rgba(46,61,73,0.2)
            transition .5s ease all
            & + .pagination__element 
                margin-left 10px
            &--active
                background $purple
            &:hover
                color #d42e12
                cursor pointer
                box-shadow 12px 15px 20px 0px rgba(46,61,73,.2)
@media(max-width 1199px)
    .pagination-container
        .pagination
            margin 0 auto 20px 