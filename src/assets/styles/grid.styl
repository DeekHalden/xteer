$dark-purple = #330154
$light-purple = #d7b1d6
$purple = #90268e
$light-gray = #636363

*
	margin 0
	padding 0
	box-sizing border-box
body
	font-family 'helveticaneuecyr-roman'
	
	background-color transparent
	overflow-x hidden
.main-container
	transition .2s ease all
	
		
	
	
ul
	list-style none
	
	
.row 
	width 1060px
	height auto
	margin 0 auto
.container-fluid
	width 100%
.clearfix:before,.clearfix:after 
	content ""
	display table
	width 0
	height 0
	visibility hidden
.clearfix:after 
	clear both
.img-responsive 
	display block
	width 100%
	height 100%
	
 	
@media (max-width 1199px)

	.row 
		width 970px
	
		
@media (max-width 991px)
	.row 
		width 750px

@media (max-width 767px)
	.row	 
		width 95%
		margin 0 auto
		

